.page-header
  %h1.mb-4
    ="Listado de mascotas"
    .float-right
      = link_to "Nueva mascota", new_pet_path, class: 'btn btn-primary'

%table.table.table-striped
  %thead
    %tr
      %th="Nombre"
      %th="Tipo"
      %th="Due√±o"
      %th
      %th
      %th

  %tbody
    - @pets.each do |pet|
      %tr
        %td= pet.name
        %td= pet.specie
        %td= pet.user.first_name
        %td= link_to "Ver", pet, class: 'btn btn-info'
        %td= link_to "Editar", edit_pet_path(pet), class: 'btn btn-success'
        %td= link_to "Eliminar", pet, method: :delete, class: 'btn btn-danger',
                  data: { confirm: "Desea eliminarlo",
                    accept: "OK",
                    reject: "CANCELAR" }

